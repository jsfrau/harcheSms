<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friendsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/friendsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Поле поиска -->
        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Поиск по никнейму"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp" />

        <!-- Кнопка поиска -->
        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поиск"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp" />

        <!-- Заголовок для списка друзей -->
        <TextView
            android:id="@+id/textViewFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Друзья"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- RecyclerView для друзей -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFriends"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <!-- Заголовок для результатов поиска -->
        <TextView
            android:id="@+id/textViewSearchResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Результаты поиска"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- RecyclerView для результатов поиска -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSearchResults"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <!-- Заголовок для запросов в друзья -->
        <TextView
            android:id="@+id/textViewFriendRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запросы в друзья"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- RecyclerView для запросов в друзья -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFriendRequests"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </LinearLayout>
</ScrollView>
